<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.ljm.secw.mapper.FileMapper">

    <select id="selectList" resultType="team.ljm.secw.entity.Resource">
        select * from t_resource
    </select>

    <select id="selectById" parameterType="int" resultType="team.ljm.secw.entity.Resource">
        select * from t_resource where id = #{id}
    </select>

    <insert id="uploadFileDao" parameterType="team.ljm.secw.entity.Resource">
        insert into t_resource (resource_name,type,downloads,file_path,teacher_id,clazz_id,uploaded_at)
        values (#{resourceName},#{type},#{downloads},#{filePath},#{teacherId},${clazzId},#{uploadedAt})
    </insert>

    <delete id="deleteById" parameterType="int">
        delete from t_resource where id = #{id}
    </delete>
</mapper>
